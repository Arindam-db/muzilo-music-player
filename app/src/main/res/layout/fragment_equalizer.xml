<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EqualizerFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equalizer"
        android:textSize="45dp"
        android:textStyle="bold"
        android:fontFamily="@font/inter_extrabold"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="34dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="12dp"
            android:padding="60dp"
            app:cardCornerRadius="20dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/normal_eq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_extrabold"
                android:layout_margin="0dp"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="12dp"
            android:padding="60dp"
            app:cardCornerRadius="20dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/bass_eq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bass Boost"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_extrabold"
                android:layout_margin="0dp"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="12dp"
            android:padding="60dp"
            app:cardCornerRadius="20dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/treble_eq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trebel Boost"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_extrabold"
                android:layout_margin="0dp"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="12dp"
            android:padding="60dp"
            app:cardCornerRadius="20dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/rock_eq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rock Metal"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_extrabold"
                android:layout_margin="0dp"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>




</LinearLayout>


</FrameLayout>